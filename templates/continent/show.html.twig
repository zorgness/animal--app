{% extends 'base.html.twig' %}

{% block title %}Continents{% endblock %}
{% block header %}{{ continent.label|title }}{% endblock %}

{% block body %}
    <div class="list-group m-3">
      <div class="border-bottom border-primary" >
        <div class="d-flex justify-content-around flex-wrap">
          {% for animal in continent.animals %}
          <div class="text-center">
            <img src="{{ asset('images/animals/' ~ animal.image) }}" alt="{{ animal.name }}" >
            <a href="{{ path("show_animal", {'id': animal.id}) }}"><h5 class="animals">{{ animal.name }}</h5></a>
          </div>


          {% endfor %}
        </div>
      </div>

  </div>
{% endblock %}
